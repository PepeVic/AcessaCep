    <h2>Insira o Cep</h2>
    <div class="row">
        <div class="col-md-4 mx-auto justify-content-center">
            <form class="form-group" action="/search-cep" method="POST">
                <input type="text" name="cep" placeholder="00000-000" pattern="^\d{5}-?\d{3}$" required/> <br />
                <button class="btn btn-outline-success m-1" type="submit">Enviar</button>
            </form>
        </div>
    </div>
</div>


