@model AcessarCep.DTO.Address
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">

@if (ViewBag.Error)
{
    <div class="mx-0 text-center mt-5 mb-2">
        <div class="col-md-4 mx-auto justify-content-center">
            <div class="alert alert-danger">
                Não foi possível encontrar seu cep <a href="/" class="alert-link">Clique aqui para fazer uma nova pesquisa.</a>
            </div>
        </div>
    </div>
}
else
{
    <div class="mx-0 text-center mt-5 mb-2">
        <div class="card col-md-4 mx-auto justify-content-center" style="width: 20rem;">
            <div class="card-body">
                <h5 class="card-title">@Model.Cep</h5>
                <h6 class="card-subtitle mb-2 text-muted">Logradouro: @Model.Logradouro</h6>
                <p class="card-text">Complemento: @Model.Complemento</p>
                <p class="card-text">Bairro: @Model.Bairro</p>
                <p class="card-text">UF: @Model.Uf</p>
                <p class="card-text">Localidade: @Model.Localidade</p>
                <p class="card-text">IBGE: @Model.Ibge</p>
                <p class="card-text">GIA: @Model.Gia</p>
                <p class="card-text">DDD: @Model.Ddd</p>
                <p class="card-text">SIAFI: @Model.Siafi</p>
            </div>
            <a href="/" class="btn btn-outline-success m-1">Fazer uma nova pesquisa</a>
        </div>
    </div>
}
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx" crossorigin="anonymous"></script>
